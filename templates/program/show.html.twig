{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
	{{ 'program'|trans }}
	#{{ program.id }}
{% endblock %}


{% block body %}


	<div class="media text-center">

		<img class="align-self-start mr-3" src="{{vich_uploader_asset(program)}}" alt="{{ program.title }} poster">

		<div class="media-body text-center">

			<h1 class="mt-0">{{ program.title }}</h1>

			<p>{{ 'synopsis'|trans }}
				:
				{{ program.summary }}</p>

			<p>{{ 'country'|trans }}
				:
				{{ program.country }}</p>

			<p>{{ 'year'|trans }}
				:
				{{ program.year }}</p>

			<p>{{ 'category'|trans }}
				:
				{{ program.category.name }}</p>
			{% for season in seasons %}
				<p>
					<a href="{{ path('program_season_show', { slug: program.slug, seasonId: season.id }) }}">{{ 'seasons'|trans }}
						{{season.number}}
						({{season.year }})</a>
				</p>
			{% endfor %}
			<h3>
				{{ 'actors'|trans }}
				:
			</h3>

			{% for actor in program.actors %}
				<p>
					<a href="{{ path("actor_show", { id: actor.id }) }}">{{ actor.firstname }}
						{{ actor.lastname }}
					</a>
				</p>

			{% else %}

				<p>{{ 'not.found'|trans }}</p>

			{% endfor %}
			{% if app.user is not null %}
				<p>
					<a id="watchlist" href="{{ path('program_watchlist', {id: program.id})}}">
						<i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>

					</a>
				</p>
			{% endif %}
		</div>

	</div>


	<a href="{{ path('program_index') }}">

		{{ 'back'|trans }}

	</a>


{% endblock %}
