{% extends 'base.html.twig' %}

{% block title %}{{ 'season'|trans }}
{% endblock %}

{% block body %}
	<div class="text-center mt-3">
		<h1>{{ 'season'|trans }}</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>{{ 'id'|trans }}</th>
					<td>{{ season.id }}</td>
				</tr>
				<tr>
					<th>{{ 'number'|trans }}</th>
					<td>{{ season.number }}</td>
				</tr>
				<tr>
					<th>{{ 'year'|trans }}</th>
					<td>{{ season.year }}</td>
				</tr>
				<tr>
					<th>{{ 'description'|trans }}</th>
					<td>{{ season.description }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn border" href="{{ path('season_index') }}">{{ 'back'|trans }}</a>

		<a class="btn border" href="{{ path('season_edit', {'id': season.id}) }}">{{ 'edit'|trans }}</a>

		{{ include('season/_delete_form.html.twig') }}
	</div>
{% endblock %}
