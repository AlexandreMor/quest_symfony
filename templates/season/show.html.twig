{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
	<div class="text-center mt-3">
		<h1>Season</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ season.id }}</td>
				</tr>
				<tr>
					<th>Number</th>
					<td>{{ season.number }}</td>
				</tr>
				<tr>
					<th>Year</th>
					<td>{{ season.year }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ season.description }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn border" href="{{ path('season_index') }}">back to list</a>

		<a class="btn border" href="{{ path('season_edit', {'id': season.id}) }}">edit</a>

		{{ include('season/_delete_form.html.twig') }}
	</div>
{% endblock %}
