{% extends 'base.html.twig' %}

{% block title %}{{ 'episode.index'|trans }}
{% endblock %}

{% block body %}
	<div class="text-center mt-3">
		<h1>{{ 'episode.index'|trans }}</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>{{ 'title'|trans }}</th>
					<th>{{ 'number'|trans }}</th>
					<th>{{ 'synopsis'|trans }}</th>
					<th>{{ 'actions'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for episode in episodes %}
					<tr>
						<td>{{ episode.id }}</td>
						<td>{{ episode.title }}</td>
						<td>{{ episode.number }}</td>
						<td>{{ episode.synopsis }}</td>
						<td>
							<a class="btn border" href="{{ path('episode_show', {'slug': episode.slug}) }}">{{ 'show'|trans }}</a>
							<a class="btn border" href="{{ path('episode_edit', {'slug': episode.slug}) }}">{{ 'edit'|trans }}</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">{{ 'not.found'|trans }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn border" href="{{ path('episode_new') }}">{{ 'create.new'|trans }}</a>
	</div>
{% endblock %}
